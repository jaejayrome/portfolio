{% extends "base.html.j2" %}

{% block content %}
<header style="margin-bottom: 3rem;">
    <h1>{{ resume.name | lower | replace(' ', '_') }}</h1>
    <div class="meta">Software Engineer based in {{ resume.location }}</div>
</header>

<section>
    <h2>~/experience</h2>
    {% for exp in resume.experience %}
        <div class="card" style="margin-bottom: 2rem;">
            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                <strong>{{ exp.role }} <span style="color: var(--accent);">@ {{ exp.company }}</span></strong>
                <span class="meta">{{ exp.period }}</span>
            </div>

            {% if exp.skills %}
            <div style="display: flex; flex-wrap: wrap; gap: 0.4rem; margin-bottom: 1rem;">
                {% for skill in exp.skills %}
                <span style="background: var(--surface0, #313244); color: var(--sapphire, #74c7ec); padding: 0.1rem 0.6rem; border-radius: 4px; font-size: 0.85em; border: 1px solid var(--border);">
                    {{ skill }}
                </span>
                {% endfor %}
            </div>
            {% endif %}

            <details>
                <summary style="cursor: pointer; color: var(--accent); font-weight: bold; margin-bottom: 0.5rem; user-select: none;">
                    cat details.txt
                </summary>
                
                <ul style="list-style: none; padding-left: 1rem; margin-top: 0.5rem;">
                    {% for bullet in exp.short_bullets %}
                    <li style="margin-bottom: 0.5rem; color: var(--muted, #8b949e);">
                        <span style="color: var(--accent);">â€º</span> 
                        <strong style="color: var(--fg, #cdd6f4);">{{ bullet.title }}:</strong> {{ bullet.desc }}
                    </li>
                    {% endfor %}
                </ul>
            </details>
        </div>
    {% endfor %}
</section>

<section>
    <h2>~/skills</h2>
    <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 0.5rem;">
        {% for category, items in resume.skills.items() %}
        <div style="color: var(--muted); text-align: right; padding-right: 1rem; border-right: 1px solid var(--border);">{{ category }}</div>
        <div>{{ items | join(', ') }}</div>
        {% endfor %}
    </div>
</section>
{% endblock %}
